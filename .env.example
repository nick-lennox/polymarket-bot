# TSA Polymarket Trading Bot Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# POLYMARKET CREDENTIALS (Required for trading)
# =============================================================================

# Your Ethereum private key (with or without 0x prefix)
POLYMARKET_PRIVATE_KEY=

# Optional: Funder address if using a proxy wallet setup
POLYMARKET_FUNDER=

# =============================================================================
# MARKET CONFIGURATION
# =============================================================================

# Optional: event slug to trade. If empty, auto-discovers today's TSA market.
TARGET_MARKET_SLUG=

# =============================================================================
# TRADING PARAMETERS
# =============================================================================

# Maximum total USD to spend per data release (across all YES + NO trades)
MAX_TRADE_SIZE_USD=50

# Maximum price to pay for YES tokens (0.0 - 1.0)
MAX_BUY_PRICE=0.95

# Minimum edge required to trade (0.0 - 1.0)
MIN_EDGE=0.05

# Dry run mode: if true, log trades but don't execute
DRY_RUN=true

# =============================================================================
# MONITORING SETTINGS
# =============================================================================

# How often to poll TSA website for updates (seconds)
POLL_INTERVAL_SECONDS=30

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
